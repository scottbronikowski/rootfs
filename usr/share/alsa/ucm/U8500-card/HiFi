# Use case Configuration for Snowball HiFi Music
# By Wei.Feng <feng.wei@linaro.org>

SectionVerb {
  EnableSequence [
  ]
  
  DisableSequence [
  ]

  Value {
    TQ "Music"
    PlaybackCTL "hw:0"
    CaptureCTL "hw:0"
    CapturePCM "hw:0,2"
  }
}

SectionDevice."Headset".0 {
  Comment "Headset connected to 3.5mm jack"

  EnableSequence [
  ]

  DisableSequence [
  ]

  Value {
    PlaybackPCM "hw:0,1"
    PlaybackChannels "2"
    CaptureChannels "2"
  }
}

SectionDevice."HDMI".0 {
  Comment "HDMI output"

  EnableSequence [
  ]

  DisableSequence [
  ]

  Value {
    PlaybackPCM "hw:0,0"
    PlaybackChannels "2"
  }
}

