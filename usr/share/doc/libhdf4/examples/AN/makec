# Edit the following variables as needed
HDF_INSTALL = 
CC          = cc 
CFLAGS      = 
LIB         = -lm

INCLUDE   = -I$(HDF_INSTALL)/include
LIBSHDF   = -L$(HDF_INSTALL)/lib -lmfhdf -ldf -ljpeg -lz

AN: create_annotation read_annotation get_annotation_info  

create_annotation: create_annotation.c 
	$(CC) $(CFLAGS) -o $@ create_annotation.c $(INCLUDE) $(LIBSHDF) $(LIB)

read_annotation: read_annotation.c
	$(CC) $(CFLAGS) -o $@ read_annotation.c $(INCLUDE) $(LIBSHDF) $(LIB)

get_annotation_info: get_annotation_info.c
	$(CC) $(CFLAGS) -o $@ get_annotation_info.c $(INCLUDE) $(LIBSHDF) $(LIB)

clean:
	rm -f *.o create_annotation read_annotation get_annotation_info

.SUFFIXES:.o.c
