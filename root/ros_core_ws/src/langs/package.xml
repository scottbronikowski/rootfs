<?xml version="1.0"?>
<package>
  <name>langs</name>
  <version>0.4.6</version>
  <description>Meta package modeling the run-time dependencies for language bindings of messages.</description>
  <maintainer email="dthomas@willowgarage.com">Dirk Thomas</maintainer>
  <license>BSD</license>

  <url type="bugtracker">https://github.com/ros/langs/issues</url>
  <url type="repository">https://github.com/ros/langs</url>

  <build_depend>catkin</build_depend>

  <run_depend>catkin</run_depend>

  <!-- required for messages generated by gencpp -->
  <run_depend>cpp_common</run_depend>
  <run_depend>roscpp_serialization</run_depend>
  <run_depend>roscpp_traits</run_depend>
  <run_depend>rostime</run_depend>

  <run_depend>langs-dev</run_depend> <!-- workaround to provide the generators to dry downstream packages -->
</package>
