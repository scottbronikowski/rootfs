#! /bin/bash


start(){
    /root/bin/emperor &
    /root/bin/run-imu &
    /root/bin/run-gps &
    /root/bin/run-encoders &
}

stop(){
    echo "killing run-gps, run-imu, emperor"
    pkill run-encoders
    pkill run-gps
    pkill run-imu
    pkill emperor
}

case $1 in
    start)
	start
	;;
    stop)
	stop
	;;
    *)
	echo "Usage: $0 {start|stop}"
	RETVAL=1
	;;
esac
exit 0

