#! /bin/bash


start(){
    /root/bin/emperor &
    /root/bin/run-sensors &
#    /root/bin/run-gps &
#    /root/bin/run-imu &
 #   /root/bin/run-encoders &
}

stop(){
    echo "killing run-sensors, emperor"
    # put a delay in here to make sure buffer empties
    sleep 2 # 1 + number of seconds in k_msg_buf_size
    pkill run-sensors
    pkill emperor
 #   pkill run-gps
  #  pkill run-encoders
   # pkill run-imu
}

case $1 in
    start)
	start
	;;
    stop)
	stop
	;;
    *)
	echo "Usage: $0 {start|stop}"
	RETVAL=1
	;;
esac
exit 0

