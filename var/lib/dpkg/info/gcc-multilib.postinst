#! /bin/sh

set -e

case "$1" in
    configure)
	if [ -n "$2" ] && dpkg --compare-versions "$2" lt 4:4.6.1-3~; then
	    if [ ! -h /usr/include/asm ] && [ -d /usr/include/asm ]; then
	        rm -rf /usr/include/asm
	        ln -sf $(gcc --print-multiarch)/asm /usr/include/asm
	    fi
	fi
esac



exit 0
