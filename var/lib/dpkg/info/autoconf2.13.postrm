#! /bin/sh -e
if [ remove = "$1" ]; then
    for d in autoconf autoheader autoreconf; do
	dpkg-divert --package autoconf2.13 --remove --rename \
		    --divert /usr/bin/${d}2.50 /usr/bin/${d}
	dpkg-divert --package autoconf2.13 --remove --rename \
		    --divert /usr/share/man/man1/${d}2.50.1.gz \
			     /usr/share/man/man1/${d}.1.gz
    done
fi

